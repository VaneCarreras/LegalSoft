@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar";
}
<body class="fondoAes">
    

<br>
<br>
<br>

<div class="row">
    @* <div class="col-md-4"></div> *@
        <div class="col-md-4">
</div>
    <div class="col-md-4">
        <section>
            <h1>@ViewData["Title"]</h1>

            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" >Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" >Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" >
                        <input class="form-check-input" asp-for="Input.RememberMe" />Recordarme
                        
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-secondary">Ingresar</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">
                        Olvidé mi contraseña</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarme</a>
                    </p>
                    @* <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de Email</a>
                    </p> *@
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
</div>
    @* <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            <img class="imgIngresar" src="~/img/ingresar.png" alt="">
        </section>
    </div> *@
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - LegalSoft</title>

  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/LegalSoft.styles.css" asp-append-version="true" />

</head>

<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LegalSoft</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Gestión Trabajo
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Mis
                    Clientes</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Equipos" asp-action="Index">Mi Equipo</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Consultas" asp-action="Index">Mis
                    Atenciones</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Expedientes" asp-action="Index">Mis
                    Expedientes</a>
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Gestión Agenda
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Pendientes" asp-action="Index">Mis
                    Recordatorios</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Turnos" asp-action="Index">Mis Turnos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="Pendientes" asp-action="Index">Mi Agenda</a>
                </li>
              </ul>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                Mis Finanzas
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Index">Mis Cobros</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Index">Mis Pagos</a>
                </li>
              </ul>
            </li>

            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Index">Contacto</a>
            </li>

          </ul>
          <partial name="_LoginPartial" />


        </div>
      </div>
    </nav>

  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2024 - LegalSoft - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>